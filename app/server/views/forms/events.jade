.tabbable.tabs-left.row
	include ../comp/cp_menu
	.tab-content.col-md-10
		.tab-pane.active
			legend.clearfix
				.pull-left=locals.title
				button.btn.btn-primary.pull-right(type="button",onclick="$('#playerPreview').hide();$('#file-uploader').show();return false")=__("Create a new event")
			.row.main-list
				- for(a=0;a<locals.result.length;a++)
					- var box = locals.result[a]
					- var boxpath = "controlpanel"
					- var span = "6"
					include ../comp/box_events

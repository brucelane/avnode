.tabbable.tabs-left
	include ../comp/cp_menu
	.tab-content
		.tab-pane.active
			include ../comp/cp_submenu_user
			form.form-horizontal(method="post")
				input(name="collection", value="users", type="hidden")
				input(name="_id", value=result._id, type="hidden")
				input(name="form", value=form, type="hidden")
				fieldset
					legend=locals.title
					include ../comp/msg
					.control-group
						label.control-label=__("New password")
						.controls
							input(type="text",name="password", placeholder=__("New password"))
					.control-group
						label.control-label=__("Confirm new password")
						.controls
							input(type="text",name="password_confirm",placeholder=__("Confirm new password"))
					hr.clearfix
					.control-group
						.controls
							button(type="submit").btn.btn-large.input-large.btn-primary.right=__("Save")

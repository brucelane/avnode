.tabbable.tabs-left
	include ../comp/cp_menu
	.tab-content
		.tab-pane.active
			include ../comp/cp_submenu_user
			form.form-horizontal(method="post", action="#")
				fieldset
					legend=locals.title
					.control-group
						label.control-label=__("New password")
						.controls
							input(type="text",placeholder=__("New password"))
					.control-group
						label.control-label=__("Confirm new password")
						.controls
							input(type="text",placeholder=__("Confirm new password"))
					hr.clearfix
					.control-group
						.controls
							button(type="submit").btn.btn-large.input-large.btn-primary.right=__("Save")

.row.user_dett
	.span9
		.media
			.pull-left
				img.media-object(alt=__("Thumbnail of")+": "+locals.result.display_name, src=locals.Fnc.getFileFormat(locals.result.files, 240, 180))
			.media-body
				h1.media-heading=locals.result.display_name
				.cnt
					ul.user_dett_ul
						- if (locals.result.websites)
							- for(a=0;a<locals.result.websites.length;a++)
								li
									a(href=locals.result.websites[a].url,target="_blank")
										i.icon-globe
										!=locals.result.websites[a].url
						- if (locals.result.locations)
							li
								i.icon-home
								!=locals.Fnc.formatLoc(locals.result.locations)
		.row
			- for(a=0;a<locals.result.length;a++)
				.span3
					.row
						.span1

	.span3
		ul.user_dett_ul.pull-right.text-right
			li
				a.btn.btn-mini
					i.icon-globe
					!=" "+__("Download PDF")
				!=" "
			li
				a.btn.btn-mini.btn-primary
					i.icon-globe.icon-white
					!=" "+__("Share")
			li
				a.btn.btn-mini.btn-primary
					i.icon-globe.icon-white
					!=" "+__("Invite to event")
			li
				a.btn.btn-mini
					i.icon-globe
					!=" "+__("Messagge")
			li
				a.btn.btn-mini.btn-primary
					i.icon-globe.icon-white
					!=" "+__("Follow")
hr
ul.nav.nav-tabs
	li(class=!sez ? "active" : undefined)
		a(href="#about",onclick="$('#about').show();")=__("About")
	- for(item in locals.result.stats)
		- if(_config.sections[item] && locals.result.stats[item])
			li
				a(href="/"+locals.result.permalink+"/"+_config.sections[item].basepath+"/")=_config.sections[item].title+" ["+locals.result.stats[item]+"]"

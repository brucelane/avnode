- console.dir(dett)
.user_dett
	.row
		.col-md-9
			h1=dett.title+": "+dettdett.titolo
		.col-md-3
			ul.nav.nav-list.user_dett_ul
				li.divider
				li.clearfix
					span.pull-left=__("Visits")+": "+dett.stats.visits
					span.pull-right
						button.btn.btn-primary.btn-mini
							i.glyphicon.glyphicon-globe.glyphicon.glyphicon-white
							!=" "+__("Like")
						!=" "
						code=dett.stats.rates ? dett.stats.rates.tot_rate : 0
				li.divider
				li=__("Author")+": "
					a(href="/"+result.permalink+"/")=result.display_name
				li.divider
				- for(item in dett.categories)
					- if (dett.categories[item] && dett.categories[item].ancestors && dett.categories[item].ancestors[0].permalink=="lv-projects-categories")
						li
							!=__("Type")+": "
							a(href="/"+config.sections[sez].basepath+"/"+dett.categories[item].permalink+"/")=dett.categories[item].name
hr
#flxerPlayer
	- dettdett.files = [{file:'/'+dettdett.folder+'/'+dettdett.name}]
	//a(href=dettdett.files[0].file,onclick="swfobject.embedSWF('/fp/flxerPlayer.swf?cnt="+config.siteurl+"/"+result.permalink+"/tvshows/"+dettdett.permalink+"/?output=xml"+"', 'flxerPlayer', '700', '394', '9.0.0','/fp/expressInstall.swf');return false;")
	img.media-object(alt=__("Thumbnail of")+": "+dettdett.titolo, src=Fnc.getFileFormat(dettdett.files, 940, 0))
hr
.row
	- for(item in dett.footage)
		- var box = dett.footage[item]
		- box.files = [{file:'/'+box.folder+'/'+box.name}]
		- var sea = "gallery"
		include comp/box_gallery_item

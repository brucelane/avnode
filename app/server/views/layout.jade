		meta(name="keywords", content=__("meta-keywords"))
		meta(name="description", content=locals.description)

		//- if(is_facebook())
			meta(property="og:title", content=(locals.title ? locals.title : "FLxER - PERFORMING VIDEO NETWORK AND SOFTWARE"))
			meta(property="og:type", content=(locals.type ? locals.type : "website"))
			meta(property="og:url", content='')
			meta(property="og:image", content='')

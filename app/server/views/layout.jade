	body
		.container
			if (typeof(userpage) === 'undefined')
				.nav.navbar.pull-right
					.navbar-inner
						ul.nav
							li.active
								form.navbar-form.form-search(action="/search/")#cse-search-box
									input(type="hidden", name="cx", value="008270153029254647808:_czuhrjkjpk")
									input(type="hidden", name="cof", value="FORID:10")
									input(type="hidden", name="ie", value="UTF-8")
									.input-append
										input.span2.search-query(type="text", 	name="q", size="31", value=locals.q)
										button.btn(type="submit", name="sa")=__("Cerca")
								//script(type="text/javascript", src="https://www.google.com/cse/brand?form=cse-search-box&amp;lang"+_config.lang)
							li.dropdown
								a.dropdown-toggle(href="#", data-toggle="dropdown")
									!=__(_config.lang)+" "
									b.caret
								ul.dropdown-menu			
									li(href="/controlpanel/?edit=performances&amp;perfid=0")=__(_config.lang)
				header
					.row
						h2.span4.logo
							a(href="/", title="FLxER - PERFORMING VIDEO NETWORK AND SOFTWARE")
								img(src="/img/logo.gif", alt="AV node - PERFORMING VIDEO NETWORK")
						.span8=locals.bannerTop
					
			nav.navbar.navbar-inverse#menu(class=(typeof(userpage) !== 'undefined' && userpage ? "navbar-fixed-top" : undefined))
				//.navbar-fixed-top
				.navbar-inner
					- if (typeof(userpage) !== 'undefined' && userpage)
						a.brand(href="/")=" AV Node"
					ul.nav
						- each item in _config.sections
							- if (item.view_list)
								li(class=(_config.sections[locals.sez] && _config.sections[locals.sez].basepath==item.basepath ? "active" : undefined))
									a(href="/"+item.basepath+"/")=item.title
					ul.nav.pull-right
						li
							a(href="/controlpanel/"+(user ? "user/" : "login/"))=(user ? __("Account") : __("Login"))
						- if(!user)
							li
								a(href="/signup/")=__("Registrati")
						- else
							li
								a(href="/controlpanel/logout/")=__("Logout")
							li(style="position:relative")
								a(href="/"+user.user_name+"/notifications/", title=__("Visualizza le notifiche"))=__("Notifiche")
									span.jewelCount=locals.notifiche
						li.dropdown
							a.dropdown-toggle(href="#", data-toggle="dropdown")
								!=__("Nuovo contenuto")+" "
								b.caret
							ul.dropdown-menu(role="menu")
								li
									a(href="/controlpanel/?edit=performances&amp;perfid=0")=__("Nuova performance")
								li
									a(href="/controlpanel/?edit=footage&amp;footageid=0")=__("Nuovo post")
								li
									a(href="/controlpanel/?edit=events&amp;eventid=0")=__("Nuovo evento")
								li
									a(href="/controlpanel/?edit=tvshows&amp;tvshowid=0")=__("Nuovo TV Show")
								li
									a(href="/controlpanel/?edit=postiflxer&amp;postiflxerid=0")=__("Nuovo iFLxER file")
								li
									a(href="/controlpanel/?edit=forum&amp;forumid=0")=__("Nuova discussione")
			!= body
			hr
			.media
				.pull-left
					img(alt="AVnode.net", src="/img/logo_piede.gif")
				.media-body
					h4.media-heading="AVnode.net"
						small=" | "+__("a project of AVnode.org")
					- d = new Date()
					ul.nav.nav-pills
						li
							span="NO &copy; "+d.getFullYear()
						li
							a(href="http://avnode.org")=__("AVnode.org")
						li
							a(href="/disclaimers/about/")=__("About")
						li
							a(href="/disclaimers/about/")=__("Developers & API")
						li
							a(href="/disclaimers/privacy/")=__("Privacy")
						li
							a(href="/disclaimers/terms/")=__("Terms and conditions")
						li
							a(href="/disclaimers/guidelines/")=__("Guidelines")
						li.pull-right
							a(href="http://www.flyer.it", target="_blank", data-toggle="tooltip", onmouseover="$(this).tooltip('show')", title=__("This website is developed with NodeJS and MongoDB from Flyer communication"))
								img(alt="Flyer.it", src="/img/logo_flyer.gif")

extends ../form-layout

block form
	include ./menu
	form.form-horizontal(method="post")
		input(name="_id", value=result._id, type="hidden")
		fieldset
			legend=__("Change password")
			.form-group
				label.col-sm-2.control-label=__("Current password")
				.col-sm-10
					input.form-control(type="password", name="password", placeholder=__("Current password"))
			hr
			.form-group
				label.col-sm-2.control-label=__("New password")
				.col-sm-10
					input.form-control(type="password", name="new_password", placeholder=__("New password"))
			.form-group
				label.col-sm-2.control-label=__("Confirm new password")
				.col-sm-10
					input.form-control(type="password", name="new_password_confirm", placeholder=__("Confirm new password"))
			hr.clearfix
			.form-group
				label.col-sm-2.control-label
				.col-sm-10
					button(type="submit").btn.btn-primary.btn-lg=__("Save")

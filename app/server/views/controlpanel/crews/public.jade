extends ../layout

block variables
	- var chapter='crews'
	- var activeSection='public'

block inner-content
	include ./menu
	+render-alerts(alerts)
	form.form-horizontal(method="post")
		input(name="_id", value=result._id, type="hidden")
		fieldset
			legend=title
			.form-group
				label.col-sm-2.control-label=__("Stage name")
				.col-sm-10
					input(name="display_name", value=result.display_name, type="text", placeholder=__("Stage name")).form-control
			.form-group
				label.col-sm-2.control-label(for="permalink")=__("Profile url")
				.col-sm-10
					.input-group
						span.input-group-addon=config.baseurl
						input.form-control(autocomplete="off", type="text", value=result.permalink, name="permalink", placeholder=__("Profile url"), required, pattern="[a-zA-z0-9]+")
		fieldset
			+multilanguage-text(result.text)
		fieldset
			+websites(result.websites)

			.form-group
				label.col-sm-2.control-label
				.col-sm-10
					button(type="submit").btn.btn-lg.btn-primary=__("Save")

a(href="/"+locals.result.permalink+"/")
	img.media-object(alt=__("Thumbnail of")+": "+locals.result.display_name, src=locals.Fnc.getFileFormat(locals.result.files, 240, 180))
h3
	a(href="/"+locals.result.permalink+"/")=locals.result.display_name
.clearfix
	.pull-right
		a.btn.btn-mini
			i.glyphicon.glyphicon-globe
			!=" "+__("Messagge")
		!=" "
		a.btn.btn-primary.btn-mini
			i.glyphicon.glyphicon-globe.glyphicon.glyphicon-white
			!=" "+__("Follow")
hr
//
	.cnt
		ul.user_dett_ul
			- if (locals.result.websites)
				- for(a=0;a<locals.result.websites.length;a++)
					li
						a(href=locals.result.websites[a],target="_blank")
							i.glyphicon.glyphicon-globe
							!=locals.result.websites[a].replace("http://","").replace("https://","")
			li
				i.glyphicon.glyphicon-home
				!=locals.Fnc.formatLoc(locals.result.locations)
	hr
ul.nav.nav-pills.nav-stacked
	li(class=!sez ? "active" : undefined)
		a(href="/"+locals.result.permalink+"/")
			i.glyphicon.glyphicon-globe
			!=" "+__("About")
	- for(item in locals.result.stats)
		- if(_config.sections[item] && locals.result.stats[item])
			li(class=locals.sez==item ? "active" : undefined)
				a(href="/"+locals.result.permalink+"/"+_config.sections[item].basepath+"/")
					i.glyphicon.glyphicon-globe
					!=" "+_config.sections[item].title+" ["+locals.result.stats[item]+"]"

ul.nav.nav-tabs
	li(class=!sez ? "active" : undefined)
		a(href="#about",onclick="$('#about').show();")=__("About")
	- for(item in locals.result.stats)
		- if(_config.sections[item] && locals.result.stats[item])
			li
				a(href="/"+locals.result.permalink+"/"+_config.sections[item].basepath+"/")=_config.sections[item].title+" ["+locals.result.stats[item]+"]"

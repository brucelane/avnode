.row.user_dett
	.span9
		.media
			.pull-left
				a(href=locals.result.permalink)
					img.media-object(alt=__("Thumbnail of")+": "+locals.result.display_name, src=locals.Fnc.getFileFormat(locals.result.files, 240, 180))
			.media-body
				h1.media-heading=locals.result.display_name
				.cnt
					ul.user_dett_ul
						- if (locals.result.websites)
							- for(a=0;a<locals.result.websites.length;a++)
								li
									a(href=locals.result.websites[a].url,target="_blank")
										i.icon-globe
										!=locals.result.websites[a].url
						li
							i.icon-home
							!=locals.Fnc.formatLoc(locals.result.locations)
		.row
			- for(a=0;a<locals.result.length;a++)
				.span3
					.row
						.span1

	.span3
		- stats = "";
		- for(item in locals.result.stats)
			- if (locals.result.stats[item] || item == "performances") stats+="<li>"+__(item)+": "+locals.result.stats[item]+"</li>"
		- if (stats)
			ul!=stats

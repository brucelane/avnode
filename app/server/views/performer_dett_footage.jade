extends layout
block content
		//- console.dir(dett)
	.user_dett
		.row
			.col-md-9
				h1=dett.title
				#flxerPlayer
					a(href=dett.files[0].file,onclick="swfobject.embedSWF('/fp/flxerPlayer.swf?cnt="+config.siteurl+"/"+result.permalink+"/footage/"+dett.permalink+"/?output=xml"+"', 'flxerPlayer', '700', '394', '9.0.0','/fp/expressInstall.swf');return false;")
						img.media-object(alt=__("Thumbnail of")+": "+dett.title, src=Fnc.getFileFormat(dett.files, 700, 394))
				br
				.row
					.col-md-8
						!=Fnc.getTextFormat(dett.text, config.lang, true)
					.col-md-4
						ul.nav.nav-list.user_dett_ul
							li=__("Visits")+": "+dett.stats.visits
							li.divider
							li=__("Type")+": "
								- for(item in dett.tag)
									a(href="/"+config.sections[sez].basepath+"/"+dett.tag[item].tag+"/")=dett.tag[item].tag
									!=" "
							li.divider
							li
								button.btn.btn-primary
									i.glyphicon.glyphicon-globe.glyphicon.glyphicon-white
									!=" "+__("Like")
								!=" "
								code=dett.stats.rates.tot_rate
							li
								button.btn.btn-primary
									i.glyphicon.glyphicon-globe.glyphicon.glyphicon-white
									!=" "+__("Share")
			.col-md-3
				h3=__("Author")
				include performer_inc_author_column

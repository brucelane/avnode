- //console.dir(locals.dett)
.user_dett
	.row
		.span9
			h1=locals.dett.title
			#flxerPlayer
				a(href=locals.dett.files[0].file,onclick="swfobject.embedSWF('/fp/flxerPlayer.swf?cnt="+_config.siteurl+"/"+locals.result.permalink+"/footage/"+locals.dett.permalink+"/?output=xml"+"', 'flxerPlayer', '700', '394', '9.0.0','/fp/expressInstall.swf');return false;")
					img.media-object(alt=__("Thumbnail of")+": "+locals.dett.title, src=locals.Fnc.getFileFormat(locals.dett.files, 700, 394))
			br
			.row
				.span7
					!=locals.Fnc.getTextFormat(locals.dett.text, _config.lang, true)
				.span2
					ul.nav.nav-list.user_dett_ul
						li=__("Visits")+": "+locals.dett.stats.visits
						li.divider
							- for(item in locals.dett.categories)
								- if (locals.dett.categories[item] && locals.dett.categories[item].ancestors && locals.dett.categories[item].ancestors[0].permalink=="tv")
									li=__("Type")+": "
										a(href="/"+_config.sections[locals.sez].basepath+"/"+locals.dett.categories[item].permalink+"/")=locals.dett.categories[item].name
										- for(item2 in locals.dett.categories)
											- if (locals.dett.categories[item2] && locals.dett.categories[item2].ancestors && locals.dett.categories[item].permalink!=locals.dett.categories[item2].permalink && locals.dett.categories[item2].ancestors[0].permalink.indexOf(locals.dett.categories[item].permalink)!=-1 && locals.dett.categories[item2].ancestors[0].permalink.indexOf("technique")!=-1)
												li=__("Technique")+": "
													a(href="/"+_config.sections[locals.sez].basepath+"/"+locals.dett.categories[item2].permalink+"/")=locals.dett.categories[item2].name
													- for(item3 in locals.dett.categories)
														- if (locals.dett.categories[item3] && locals.dett.categories[item3].ancestors && locals.dett.categories[item].permalink!=locals.dett.categories[item3].permalink && locals.dett.categories[item3].ancestors[0].permalink.indexOf("genere")!=-1)
															li=__("Genre")+": "
																a(href="/"+_config.sections[locals.sez].basepath+"/"+locals.dett.categories[item3].permalink+"/")=locals.dett.categories[item3].name
						li.divider
						li
							button.btn.btn-primary
								i.icon-globe.icon-white
								!=" "+__("Like")
							!=" "
							code=locals.dett.stats.rates.tot_rate
						li
							button.btn.btn-primary
								i.icon-globe.icon-white
								!=" "+__("Share")
		.span3
			h3=__("Author")
			include performer_inc_author_column
include comp/submenu_sez
h1=_config.sections[locals.sez].title+" "
	small=__("From")+" "+locals.skip+" "+__("to")+" "+(locals.skip+_config.sections[locals.sez].limit)+" "+__("on")+" "+locals.tot+" "+_config.sections[locals.sez].title
.row
	- for(a=0;a<locals.result.length;a++)
		.span3
			.media
				.pull-left
					a(href="/"+locals.result[a].users[0].permalink+"/"+_config.sections[locals.sez].basepath+"/"+locals.result[a].permalink+"/")
						img.media-object(alt=__("Thumbnail of")+": "+locals.result[a].title, src=locals.Fnc.getFileFormat(locals.result[a].files, 90, 68))
				.media-body
					h4.media-heading
						a(href="/"+locals.result[a].users[0].permalink+"/"+_config.sections[locals.sez].basepath+"/"+locals.result[a].permalink+"/")=locals.result[a].title
					- performers = "";
					- for(item in locals.result[a].users)
						- if (locals.result[a].users[item]) performers+="<li><a href=\"/"+locals.result[a].users[item].permalink+"/\">"+locals.result[a].users[item].display_name+"</a></li>"
					- if (performers)
						ul!=performers
					- categories = "";
					- for(item in locals.result[a].categories)
						- if (locals.result[a].categories[item]) categories+="<li><a href=\"/"+_config.sections[locals.sez].basepath+"/"+locals.result[a].categories[item].permalink+"/\">"+locals.result[a].categories[item].name+"</a></li>"
					- if (categories)
						ul!=categories
					ul
						li=__("Visits")+": "+locals.result[a].stats.visits
						li=__("Downloads")+": "+locals.result[a].stats.visits
						li=__("Rate")+": "+locals.result[a].stats.rates.tot_rate
include comp/paginator

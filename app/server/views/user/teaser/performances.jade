.col-md-4.performances_performer.main_box_performer
	h2.box_performer_header.box_header
		span.title_str Performances
		+coda('#0F8FCF')
	.col-sm-12
		.row.box_wrapper.coloured
			each performance, i in user.performances
				if i === 0
					a.col-sm-12.main_performance_title_wrapper(href="/#{performance.users[0].permalink}/performances/#{performance.permalink}", title=performance.title)
						h3.main_performance_title=performance.title
					a.col-sm-6.col-xs-12.col-md-12.main_performace_image_wrapper(href="/#{performance.users[0].permalink}/performances/#{performance.permalink}", title=performance.title)
						img.main_performace_image(src=performance.files[0].file, alt=performance.title)
					.main_performer_box
						.col-sm-6.col-xs-12.col-md-12
								ul.list-inline
									li
										i(class="fa fa-user")
											a.performance_owner(href="/#{performance.users[0].permalink}", title=performance.users[0].display_name)= performance.users[0].display_name
									li.evidence-performance_stats
										span.stat.value= performance.stats.visits
										span= __(" Visits")
									li.evidence-performance_stats
										span.stat.value= performance.stats.rates.tot_rate
										span= __(" Likes")
						.col-sm-6.col-xs-12.col-md-12
								ul.evidence-performance_categories.list-inline
									- for (category in performance.categories)
										li
											i(class="fa fa-cube")
											a(href="/"+performance.categories[category].permalink, title=performance.categories[category].name)= performance.categories[category].name
				if (i > 0 && i < 3)
					.col-sm-12.secondary_performance_wrapper
						.secondary_performance.hidden-xs
							a(href="/#{performance.users[0].permalink}/performances/#{performance.permalink}", title=performance.title)
								.col-sm-3.secondary-performace_image
									img.img-circle(src=performance.files[0].file, alt=performance.title)
								h3.col-sm-9= performance.title
			.col-sm-12.more_performance.more_button
				a(href="/#{user.permalink}/performances", title='More performances')=__("All the performances")
					span=__("+")
					+slashes("#0F8FCF")

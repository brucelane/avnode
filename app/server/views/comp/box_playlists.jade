- if (typeof(username) === 'undefined') span = "3"
div(class="span"+span)
	.media
		.pull-left
			a(href="/"+box.users[0].permalink+"/"+_config.sections[locals.sez].basepath+"/"+box.permalink+"/")
				img.media-object(alt=__("Thumbnail of")+": "+box.title, src=locals.Fnc.getFileFormat(box.files, 90, 68))
		.media-body
			h4.media-heading
				a(href="/"+box.users[0].permalink+"/"+_config.sections[locals.sez].basepath+"/"+box.permalink+"/")=box.title
			- performers = "";
			- for(item in box.users)
				- if (box.users[item]) performers+="<li><a href=\"/"+box.users[item].permalink+"/\">"+box.users[item].display_name+"</a></li>"
			- if (performers)
				ul.stats!=performers
			ul.stats
				li=__("Visits")+": "+box.stats.visits
				li=__("Downloads")+": "+box.stats.visits
				li=__("Likes")+": "+box.stats.rates.tot_rate
